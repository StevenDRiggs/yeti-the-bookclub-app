<%= form_for object_ do |f| %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <br><br>

    <%= f.label :books %><br>
    <%= f.collection_check_boxes :book_ids, Book.all, :id, :name %>

    <br>

    <%= f.fields_for :books, object_.books.build do |books_fields| %>
      <%= books_fields.text_field :name %>
    <% end %>
  </fieldset>

  <%= f.submit %>
<% end %>
